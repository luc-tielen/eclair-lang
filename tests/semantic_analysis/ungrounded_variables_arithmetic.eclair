//--- program1.eclair
@def a(u32) output.
@def b(u32) output.

b(123 + a).

a(abc) :-
  def = 123,
  abc = 123 + def,
  b(abc).

a(abc) :-
  abc = 123,
  // Should detect cycle correctly.
  def = abc + def.

